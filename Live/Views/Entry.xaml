<Window x:Class="Live.Views.Entry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Live.Views"
        mc:Ignorable="d"
        Title="Entry" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="673*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="1" Grid.Column="0" BorderBrush="Red" Grid.ColumnSpan="2"/>
        <ListBox Grid.Row="1" Grid.Column="2" Margin="0,405,0,0" Grid.RowSpan="2"/>
        <Border Grid.Row="1" Grid.Column="2" BorderThickness="1" BorderBrush="Black">
            <Image  />
        </Border>

    </Grid>
</Window>
